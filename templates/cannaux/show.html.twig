{% extends 'base.html.twig' %}

{% block title %}Cannaux{% endblock %}

{% block body %}
    <h1>Cannaux</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cannaux.id }}</td>
            </tr>
            <tr>
                <th>Ref_canal</th>
                <td>{{ cannaux.RefCanal }}</td>
            </tr>
            <tr>
                <th>Nom_canal</th>
                <td>{{ cannaux.NomCanal }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ cannaux.Type }}</td>
            </tr>
            <tr>
                <th>Cible</th>
                <td>
                    {% for cible in cannaux.cible %}
                        {{ cible.Nom_cible }}
                        <br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cannaux_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app_cannaux_edit', {'id': cannaux.id}) }}" class="btn btn-danger">edit</a>

    {{ include('cannaux/_delete_form.html.twig') }}
{% endblock %}
