{% extends 'base.html.twig' %}

{% block title %}Achat{% endblock %}

{% block body %}
    <h1>Achat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achat.id }}</td>
            </tr>
            <tr>
                <th>Ref_achat</th>
                <td>{{ achat.RefAchat }}</td>
            </tr>
            <tr>
                <th>Date_achat</th>
                <td>{{ achat.DateAchat ? achat.DateAchat|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ achat.Client }}</td>
            </tr>
            <tr>
                <th>Produit</th>
                <td>{{ achat.Produit }}</td>
            </tr>
            <tr>
                <th>Statut_payement</th>
                <td>{{ achat.StatutPayement }}</td>
            </tr>
            <tr>
                <th>Statut_livraison</th>
                <td>{{ achat.StatutLivraison }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_achat_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app_achat_edit', {'id': achat.id}) }}" class="btn btn-danger">edit</a>

    {{ include('achat/_delete_form.html.twig') }}
{% endblock %}
