{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Liste des services</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ref_service</th>
                <th>Nom_service</th>
                <th>Description</th>
                <th>Tarif_horaire</th>
                <th>Statut</th>
                <th>Zone_geographique</th>
                {# <th>Client</th> #}
                <th>Cible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.RefService }}</td>
                <td>{{ service.NomService }}</td>
                <td>{{ service.Description }}</td>
                <td>{{ service.TarifHoraire }}</td>
                <td>{{ service.Statut }}</td>
                <td>{{ service.ZoneGeographique }}</td>
                {# <td>{{ service.client }}</td> #}
                <td>
                    {% for cible in service.Cible %}
                        {{ cible.Nom_cible }}
                        <br>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-success"><i class="fa-solid fa-eye"></i> show</a>
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-danger"><i class="fa-solid fa-pen-to-square"></i> edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_service_new') }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create new</a>
{% endblock %}
